@inherits LayoutComponentBase

<PageTitle>Imbang Lady Jane </PageTitle>

<style>


    body {
        background-color: #343a40; /* Dark gray background for the entire page */
        color: #ffffff; /* White text color for sidebar */
        margin: 0;
        font-family: Arial, sans-serif;
    }

    .page {
        display: flex;
        min-height: 100vh; /* Ensure the page covers the full viewport height */
    }

    .sidebar {
        background-color: #343a40; /* Dark gray background for sidebar */
        color: #ffffff; /* White text color for sidebar */
        width: 250px;
        padding: 1rem;
    }

    .navbar {
        background-color: #000000; /* Black background for the navbar */
        color: #ffffff; /* White text color for navbar */
    }

    .navbar-nav .nav-link {
        color: #ffffff; /* White text color for nav links */
    }

        .navbar-nav .nav-link:hover {
            color: #cccccc; /* Light gray text color on hover */
        }

    .top-row {
        background-color: #e9ecef; /* Light gray background for the top row */
        padding: 1rem;
    }

    .content {
        background-color: #8c9b5d; /* Earthy green background for the content area */
        padding: 1rem;
        color: #ffffff; /* White text color to ensure readability on dark green background */
    }

    footer {
        background-color: #d3d3d3; /* Light gray background for the footer */
        color: #343a40; /* Dark gray color for the footer */
        padding: 1rem;
    }

    .link-body-emphasis {
        color: #ffffff; /* White text color for emphasized links */
    }

    .text-body-secondary {
        color: #6c757d; /* Secondary text color */
    }
</style>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <nav class="navbar navbar-expand-sm">

            <div class="container-fluid">

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.tripadvisor.com.ph/">Tripadvisor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.facebook.com/photo/?fbid=748703467290243&set=a.224830553010873&__tn__=%3C">Department of Tourism</a>
                    </li>
                </ul>
            </div>

        </nav>

        <div class="top-row px-4">
            <a href="https://www.roughguides.com/" target="_blank">Roughguides</a>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <p class="col-md-4 mb-0 text-body-secondary fw-bold">LADY JANE IMBANG</p>

                <a href="https://southernchristiancollege.edu.ph/"
                   target="_blank"
                   class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
                    <img src="https://southernchristiancollege.edu.ph/wp-content/uploads/2024/06/SCC-Official-Logo_320px.png"
                         alt="Southern Christian College Logo"
                         width="10%"
                         class="me-2">
                </a>

                <label class="nav col-md-4 justify-content-end fw-bold">SOUTHERN CHRISTIAN COLLEGE</label>
                <label class="nav col-md-4 justify-content-end fw-bold">INFORMATION TECHNOLOGY STUDENT</label>
            </footer>
        </div>
    </main>
</div>
