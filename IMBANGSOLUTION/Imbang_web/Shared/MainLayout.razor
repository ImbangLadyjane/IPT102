@inherits LayoutComponentBase

<PageTitle>Imbang_web</PageTitle>

<style>
    body {
        background-image: url('https://images.unsplash.com/photo-1696550580350-53fb6e947130?q=80&w=1563&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); /* Replace with your image URL */
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Prevent the image from repeating */
        color: #333; /* Dark text */
    }


    .sidebar {
        background-color: #003366; /* Dark blue sidebar */
        color: #fff; /* White text */
    }

    .navbar {
        background-color: #006699; /* Medium blue navbar */
    }

    .navbar-nav .nav-link {
        color: #ffd700; /* Gold text for links */
    }

    .navbar-nav .nav-link:hover {
        color: #ffcc00; /* Yellow on hover */
    }

    .content {
        background-image: url('https://plus.unsplash.com/premium_photo-1676070096504-f49698ed74be?q=80&w=1469&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); /* Sample mountain image URL */
        background-size: cover; /* Cover the entire content area */
        background-position: center; /* Center the image */
        padding: 20px; /* Padding for content */
    }



    footer {
        background-color: #003366; /* Dark blue footer */
        color: #fff; /* White text */
    }

    footer a {
        color: #ffcc00; /* Yellow for footer links */
    }

    footer a:hover {
        color: #ffffff; /* White on hover */
    }
</style>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.tripadvisor.com.ph/">Tripadvisor</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="https://www.facebook.com/photo/?fbid=748703467290243&set=a.224830553010873&__tn__=%3C">Department of Tourism</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div
            class="top-row px-4">
            <a href="https://www.roughguides.com/" target="_blank">Roughguides</a>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <div
            class="container d-flex justify-content-between align-items-center">
            <div 
                class="d-flex flex-column align-items-start text-start">
                <div>
                    <p class="mb-0 fw-bold" style="font-family: Arial, Times, serif, sans-serif; color: white; text-shadow: 2px 2px 4px black;">LADY JANE S. IMBANG</p> </div>

                <div>
                    <p class="mb-0 fw-bold" style="font-family: Arial, Times, serif, sans-serif; color: white; text-shadow: 2px 2px 4px black;">INFORMATION TECHNOLOGY STUDENT</p>
                    <p class="mb-0 fw-bold" style="font-family: Arial, Times, serif, sans-serif; color: white; text-shadow: 2px 2px 4px black;">SOUTHERN CHRISTIAN COLLEGE</p><p></p>
                    <p class="mb-0 fw-bold" style="font-family: Arial, Times, serif, sans-serif; color: white; text-shadow: 2px 2px 4px black;">MIDSAYAP NORTH COTABATO</p>
                  
                </div>
            </div>

            <!-- Logo aligned to the right -->
            <a href="https://southernchristiancollege.edu.ph/" target="_blank" class="link-body-emphasis text-decoration-none">
                <img src="https://southernchristiancollege.edu.ph/wp-content/uploads/2024/06/SCC-Official-Logo_320px.png" alt="Southern Christian College Logo" width="150" class="ms-2">
            </a>
        </div>



    </main>
</div>
