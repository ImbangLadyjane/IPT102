@page "/calculator"

<PageTitle>Calculator</PageTitle>

<link href="/calstyle.css" rel="stylesheet" />

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Basic Calculator</title>
    <style>
        body.calculator-body { /* Changed class name to differentiate */
            font-family: Arial, sans-serif;
            background-color: #1c1c1c; /* Darker background specifically for calculator */
            color: #fff; /* Light text color */
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
            height: 100vh; /* Full viewport height */
            margin: 0;
        }

        .calculator {
            width: 320px; /* Adjusted width */
            background-color: #444; /* Darker calculator background */
            border: 1px solid #ccc;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); /* Softer shadow */
            padding: 10px; /* Add some padding */
        }

        .display {
            width: 100%;
            height: 60px; /* Increased height */
            margin-bottom: 10px;
        }

            .display input {
                width: 100%;
                height: 100%;
                font-size: 32px; /* Larger font size for better readability */
                text-align: right;
                background-color: #222; /* Dark input background */
                color: #fff; /* Light text color */
                border: none;
                border-radius: 5px;
            }

        input[type="button"] {
            width: 60px; /* Increased button width */
            height: 60px; /* Increased button height */
            font-size: 24px; /* Larger button font size */
            margin: 5px;
            border: none;
            border-radius: 5px;
            background-color: #007bff; /* Button color */
            color: white;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            input[type="button"]:hover {
                background-color: #0056b3; /* Darker button color on hover */
            }

        .operator {
            background-color: #ff7f50; /* Different color for operator buttons */
        }

            .operator:hover {
                background-color: #ff6347; /* Darker color on hover */
            }

        .equal {
            background-color: #28a745; /* Color for the equal button */
        }

            .equal:hover {
                background-color: #218838; /* Darker color on hover */
            }

        .button-row {
            display: flex;
            justify-content: space-between; /* Space between buttons */
        }

        h1 {
            text-align: center; /* Center the title */
            font-size: 24px; /* Adjust title font size */
            margin: 10px 0; /* Add some margin */
        }
    </style>

</head>
<body class="calculator-body">
    <!-- Added class here -->

    <div class="calculator">
        <h1 style="color: white;">Basic Calculator</h1>

        <form>
            <div class="display">
                <input type="text" name="display" id="display" readonly>
            </div>
            <div class="button-row">
                <input type="button" value="AC" onclick="document.getElementById('display').value = ''" class="operator">
                <input type="button" value="DE" onclick="document.getElementById('display').value = document.getElementById('display').value.slice(0, -1)" class="operator">
                <input type="button" value="." onclick="document.getElementById('display').value += '.'" class="operator">
                <input type="button" value="/" onclick="document.getElementById('display').value += '/'" class="operator">
                <input type="button" value="*" onclick="document.getElementById('display').value += '*'" class="operator">
            </div>
            <div class="button-row">
                <input type="button" value="7" onclick="document.getElementById('display').value += '7'">
                <input type="button" value="8" onclick="document.getElementById('display').value += '8'">
                <input type="button" value="9" onclick="document.getElementById('display').value += '9'">
                <input type="button" value="-" onclick="document.getElementById('display').value += '-'" class="operator">
                <input type="button" value="+" onclick="document.getElementById('display').value += '+'" class="operator">
            </div>
            <div class="button-row">
                <input type="button" value="4" onclick="document.getElementById('display').value += '4'">
                <input type="button" value="5" onclick="document.getElementById('display').value += '5'">
                <input type="button" value="6" onclick="document.getElementById('display').value += '6'">
            </div>
            <div class="button-row">
                <input type="button" value="1" onclick="document.getElementById('display').value += '1'">
                <input type="button" value="2" onclick="document.getElementById('display').value += '2'">
                <input type="button" value="3" onclick="document.getElementById('display').value += '3'">
            </div>
            <div class="button-row">
                <input type="button" value="00" onclick="document.getElementById('display').value += '00'">
                <input type="button" value="0" onclick="document.getElementById('display').value += '0'">
                <input type="button" value="=" onclick="document.getElementById('display').value = eval(document.getElementById('display').value)" class="equal operator">
            </div>
        </form>
    </div>

</body>
</html>
